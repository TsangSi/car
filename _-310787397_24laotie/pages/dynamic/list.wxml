<view class="page">
    <view class="page__bd">
        <view id="main">
            <view id="list" wx:if="{{msg&&msg.length>0}}">
                <view class="list_item" wx:for="{{msg}}" wx:for-index="idx" wx:key="key">
                    <navigator url="{{item.url}}">
                        <view class="po-avt-wrap">
                            <image class="po-avt data-avt" src="{{item.avatarUrl}}"></image>
                        </view>
                        <view class="po-cmt">
                            <view class="po-hd">
                                <view class="po-name">
                                    <text class="data-name">{{item.nickName}}</text>
                                    <text style="float:right;">{{item.time}}</text>
                                </view>
                                <view class="post">
                                    <view>{{item.content}}</view>
                                </view>
                            </view>
                        </view>
                    </navigator>
                </view>
            </view>
            <view class="null" wx:else>没有记录</view>
        </view>
    </view>
</view>
